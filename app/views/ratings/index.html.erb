
<% provide(:title, 'All Ratings') %>
<h1>All Ratings</h1>
<h3> Average: <%= formatted_average(@average) %> </h3>
<% if @ratings.nil? %>
  <%= render 'filter_empty' %>
  <button> <a href="/rating/new"> Rate now </a></button>
  <% else %>

    <%= will_paginate %>
    <ul class="ratings">
      <% @ratings.each do |user| %>
        <%= render @ratings %>
      <% end %>
    </ul>

    <%= will_paginate %>

<% end %>
