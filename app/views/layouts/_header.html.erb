<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to "Rate My Meeting", '/', id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home",   root_path %></li>
      <li><%= link_to "Rate",   new_rating_path %></li>
      <li><%= link_to "Ratings", ratings_path(meeting_date: Date.today.to_s) %></li>

      <% if logged_in? %>
       <li><%= link_to "Log out", logout_path, method: :delete %></li>

      <% end %>

      <% if !logged_in? %>
        <li><%= link_to "Login",   login_path %></li>
      <% end %>

      <% if logged_in? %>
        <li><%= link_to "Users", '#' %></li>
      <% end %>
    </ul>
  </nav>
</div>
</header>