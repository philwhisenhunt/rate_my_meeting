<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.ratings.any? %>
      <h3>Ratings (<%= @user.ratings.count %>)</h3>
      <ol class="ratings">
        <%= render @ratings %>
      </ol>
    <% end %>
  </div>
</div>